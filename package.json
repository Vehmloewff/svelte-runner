{
	"name": "svelte-runner",
	"version": "1.0.0",
	"description": "Run svelte components.  Zero configuration necessary.",
	"keywords": [
		"svelte",
		"runner",
		"component"
	],
	"preferGlobal": true,
	"homepage": "https://github.com/Vehmloewff/svelte-runner",
	"repository": {
		"type": "git",
		"url": "https://github.com/Vehmloewff/svelte-runner"
	},
	"license": "MIT",
	"author": {
		"name": "Vehmloewff",
		"url": "https://github.com/Vehmloewff"
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"typings": "typings/src/index.d.ts",
	"files": [
		"dist",
		"typings"
	],
	"bin": {
		"svelte-runner": "./dist/cli.js"
	},
	"scripts": {
		"build": "rollup -c --environment NODE_ENV:production && node scripts/tweak-bundle",
		"live": "rollup -c && node dist/cli.js",
		"test": "rollup -c --environment=NODE_ENV:test",
		"clean": "rm -rf dist typings",
		"lint": "prettier --write \"./**\"",
		"lint:test": "prettier --check \"./**\"",
		"prepublishOnly": "npm run clean && npm run build",
		"preversion": "npm run test && npm run lint:test && npm run build"
	},
	"pkg": {
		"scripts": "node_modules/svelte-preprocess/dist/transformers/**/*.js",
		"assets": "node_modules/rollup-plugin-hot-nollup/compat-nollup.runtime.js"
	},
	"devDependencies": {
		"@babel/core": "^7.12.8",
		"@types/babel__core": "^7.1.12",
		"@types/express": "^4.17.9",
		"@types/http-proxy": "^1.17.4"
	},
	"dependencies": {
		"@rollup/plugin-commonjs": "^15.1.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^10.0.0",
		"@rollup/plugin-sucrase": "^3.1.0",
		"@rollup/plugin-typescript": "^6.1.0",
		"@rollup/plugin-virtual": "^2.0.3",
		"rollup": "^2.33.3",
		"acorn": "^8.0.4",
		"bufferutil": "^4.0.2",
		"builtin-modules": "^3.1.0",
		"coffeescript": "^2.5.1",
		"commander": "^6.2.0",
		"express": "^4.17.1",
		"less": "^3.12.2",
		"nollup": "^0.13.13",
		"open": "^7.3.0",
		"path-exists": "^4.0.0",
		"path-type": "^4.0.0",
		"postcss-load-config": "^3.0.0",
		"prettier": "^2.2.0",
		"pug": "^3.0.0",
		"rollup-plugin-command": "^1.1.3",
		"rollup-plugin-svelte": "^6.1.1",
		"rollup-plugin-svelte-hot": "^0.11.2",
		"rollup-plugin-terser": "^7.0.2",
		"stylus": "^0.54.8",
		"sugarss": "^3.0.3",
		"svelte": "^3.29.7",
		"svelte-preprocess": "^4.6.1",
		"tslib": "^2.0.3",
		"typescript": "^4.1.2",
		"utf-8-validate": "^5.0.3",
		"ws": "^7.4.0",
		"zip-tap": "^1.0.6",
		"http-proxy": "^1.18.1",
		"zip-tap-reporter": "^2.0.1"
	}
}
